<!DOCTYPE html>
<html>
<head>
  <title>ProblemOrNot</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id='header'>
  <% if user_signed_in? %>
    <p>Welcome:<%= current_user.email %><%= link_to 'Logout', destroy_user_session_path, :method => :delete %></p>
  <% else %>
    <%= link_to 'Login', oauth_login_path( :twitter) %>
  <% end %>
  <%= image_tag 'header.png', :size => '800x200'%>
</div>
<%= yield %>

</body>
</html>
